@page
@model ProjectPrn221.Pages.Admin.Products.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<h2>Create a new Product</h2>

<form method="post">
    <div class="mb-3">
        <label for="product-name" class="form-label">Product Name</label>
        <input asp-for="Product.ProductName" type="text" class="form-control" id="product-name" placeholder="Enter product name">
    </div>
    <div class="mb-3">
        <label for="category-select" class="form-label">Category</label>
        <select asp-for="Product.CategoryId" asp-items="ViewBag.Category"></select><br />
    </div>
    <div class="mb-3">
        <label for="category-id" class="form-label">Quantity</label>
        <input asp-for="Product.QuantityPerUnit" type="text" class="form-control" id="Quantity" placeholder="Enter category ID">
    </div>
    <div class="mb-3">
        <label for="quantity-per-unit" class="form-label">Price</label>
        <input asp-for="Product.UnitPrice" type="number" min="0" max="100" class="form-control" id="Pricet" placeholder="Enter quantity per unit">
    </div>  
  
    <div class="form-check" style="margin-bottom: 10px">
        <input class="form-check-input" type="checkbox" id="Discontinued" name="checkbox1">
        <label asp-for="Product.Discontinued" class="form-check-label" for="Discontinued">Discontinued</label>
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>