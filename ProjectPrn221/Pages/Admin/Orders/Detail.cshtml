@page
@model ProjectPrn221.Pages.Admin.Orders.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    float sum_amount = 0;
    ViewBag.Title = "Index";
}

<div class="container p-3 my-3">
    <h1 class="text-center">Order Detail</h1>
    <hr />
<h2>OrderId: @Model.OrderId</h2>
<table border="1" class="w-100 mb-4">    <thead>
        <tr>
            <th>
                ProductId
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Amount
            </th>


        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.OrderDetail)
            {
                    <tr>
                        <td>
                        @item.ProductId 
                        </td>
                        <td>
                        @item.Product.ProductName
                        </td>
                        <td>
                        @item.UnitPrice
                        </td>
                        <td>
                        @item.Quantity
                        </td>
                        <td>
                        @{
                            float sum = ((float)@item.UnitPrice * (float)@item.Quantity);
                            sum_amount = sum_amount + sum;
                        }
                            $ @sum
                        </td>
                    </tr>
            }
    </tbody>
</table>
    <h2>Total: $ @sum_amount</h2>
</div>