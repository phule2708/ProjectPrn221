@page
@model ProjectPrn221.Pages.Admin.Products.ListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    List<int> myIntList = new List<int>();
}
<h2>List of Products</h2>
<div style="background-color:green; color:white; font-weight:bold">
    @if (TempData["msg"] != null)
    {
        <span>@TempData["msg"]</span>
    }
</div>

<div class="filterCat">
    <form id="frmCate"  method="get">
    <select name="cateId" onchange="ChangeCate()">
        <option value="0">All Category</option>
        @foreach (var c in Model.Categories)
        {
            @if (@ViewBag.SelectedId == @c.CategoryId)
            {
                <option value="@c.CategoryId" selected>@c.CategoryName</option>
            }
            else
            {      
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        }
    </select  
</form>
<div class="addMovies">
    @if (ViewBag.role == "Customer")
    {
        <button class="btn btn-info"><a style="color:white" href="/Member/ListCart">Cart list</a></button>
    }
    <button class="btn btn-success">Add New Product</button>
</div>
</div>

@{
    var products = Model.Products;
}
@if (ViewBag.productId != null)
{
    <p style="margin-top:40px;color:#FF0000">Add product with id @ViewBag.productId to cart successfully</p>
}
<div>
    <div class="product1">
        <div style="width:5%">Id</div>
        <div style="width:22%">Name</div>
        <div class="ingredient">Price</div>
        <div class="ingredient">Quantity</div>
        <div class="ingredient">Category</div>
     </div>
</div>
@foreach (var p in products)
{
     <div class="product">
        <div style="width:5%" class="id" name="id">@p.ProductId</div>        
        <div style="width:22%" class="name">@p.ProductName</div>
        <div style="width:20%" class="price" data-price="@p.UnitPrice">@p.UnitPrice $</div>        
        <div style="width:20%">@p.QuantityPerUnit</div>
        <div style="width:20%">@p.Category.CategoryName</div>
           @if (ViewBag.role == "Employees")
                {
                    <td>
                        <a asp-page="Edit" asp-route-catId="@ViewBag.SelectedId" asp-route-id="@p.ProductId">Edit</a>
                    </td>
                    <td>
                        <a asp-page="List" asp-page-handler="Delete" asp-route-catId="@ViewBag.SelectedId" asp-route-id="@p.ProductId">Delete</a>
                    </td>
                }
                else
                {
                    <td>
                        <button class="btn btn-warning"><a asp-page="List" asp-page-handler="AddCart" asp-route-catId="@ViewBag.SelectedId" asp-route-id="@p.ProductId">AddCart</a></button>
                    </td>
                    <td>
                        <button class="btn btn-danger"><a href="/Admin/Products/buy">Buy</a></button>
                    </td>
                }
    </div>
}
