@{
    string acount = Context.Session.GetString("account");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WebApplication2</title>
    <link rel="stylesheet" href="https://unpkg.com/simplebar@5.3.4/dist/simplebar.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <script src="https://pagination.js.org/dist/2.1.5/pagination.js"></script>
    <!-- Your HTML code goes here -->
    <!-- Include SimpleBar script file -->
    <script src="https://unpkg.com/simplebar@5.3.4/dist/simplebar.min.js"></script>
     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="../wwwroot/js/site.js" type="text/javascript" async></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>

        #paging {
            text-align: center;
            margin-top: 15px;
        }

        .pagination {
            display: inline-block;
            text-align: center;
        }

            .pagination a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
            }

                .pagination a.active {
                    background-color: sienna;
                    color: white;
                    border-radius: 5px;
                }

                .pagination a:hover:not(.active) {
                    background-color: #ddd;
                    border-radius: 5px;
                }

        #simple-bar {
            border: 1px solid grey;
            margin-top:0;
            max-height: 600px;
            min-height: 100px;
        }

        main {
            border-radius: 2px solid gray;
            width: 90%;
            margin: 10px auto;
        }

        nav.navbar.navbar-expand-sm.navbar-toggleable-sm.navbar-light.bg-white.border-bottom.box-shadow.mb-3, footer, .col-2 {
            background: bisque !important;
        }

        #content_left {
            background: bisque !important;
            width: 15%;
            height: auto;
        }

        ul {
            list-style-type: none;
        }

        .col-2 a {
            color: black;
            font-size: 24px;
            margin-bottom: 25px;
        }
    </style>
</head>
<body>
    <header>
        <nav style="height:100px" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand font-weight-bold" asp-area="" asp-page="/Index">Management Products</a>
                @if (@acount != null)
                {
                    <div style="border-color:cornsilk">
                        <p>@acount</p>
                        <form method="post" asp-page-handler="Logout">
                            <button type="submit" style="background: azure">
                                <a>Logout</a>
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="btn-secondary" style="border-color:cornsilk">
                        <button class="btn-secondary" style="background: azure">
                            <a asp-page="Signin">Login</a>
                        </button>
                    </div>
                }
            </div>
        </nav>
    </header>
    <!-- menu -->
    <div class="row mb-2">
        <div class="col-2">
            <nav class="mt-5">
                <ul class="text-xl-center">
                    <a href="javascript:void">
                    <li class="active">Dashboard</li></a>
                    <a href="~/admin/orders/list">
                    <li>Orders</li></a>
                    <a href="~/common/products/list">
                    <li>Products</li></a>
                    <a href="~/admin/customers">
                    <li>Customers</li></a>
                    <a href="~/admin/employees">
                    <li>Employees</li></a>
                </ul>
            </nav>
        </div>


        <!-- main article -->
        <div class="col-10">
            <main class="container">
                @RenderBody()
            </main>

        </div>

    </div>
    <footer class="border-top footer text-muted p-4">
        <div class="container">
            &copy; 2023 - WebApplication3 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
